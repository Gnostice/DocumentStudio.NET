@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gnostice Document Studio .NET - Document Converter</title>
    <style type="text/css">
        body {
            background: #999;
            padding: 100px 400px 100px 400px;
        }

        .Body {
            background: #FFF;
            border: 5px solid #555;
        }

        .Header {
            border: 1px solid #777;
            background: #CCC;
            text-align: center;
        }

        .Content {
            padding: 50px 100px 50px 100px;
        }

        .Footer {
            border: 1px solid #777;
            background: #CCC;
            padding: 5px;
            text-align: center;
        }

        table {
            width: 100%;
        }

        .Space {
            width: 10px;
        }

        .ConvertButton {
            width: 100%;
            height: 40px;
            font-family: 'Arial Rounded MT';
            font-size: 20px;
            font-weight: bolder;
        }

        table > tbody > tr > th {
            text-align: left;
            width: 110px;
        }
    </style>
</head>
<body>
    <div>
        <div class="Body">
            <div class="Header">
                <h2>Gnostice Document Studio .NET - Document Converter</h2>
            </div>
            <div class="Content">
                @{ using (Html.BeginForm("Index", "", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                   { 
                    <table>
                        <tr>
                            <th>Input</th>
                            <td class="Space"></td>
                            <td colspan="2">
                                <input multiple type="file" name="InputFileUploader" id="InputFileUploader" /></td>
                        </tr>
                        <tr>
                            <th>Output Format</th>
                            <td></td>
                            <td>
                                <select id="cmbOutputFormat" name="cmbOutputFormat" onchange="showHideChkBx()">
                                    <option>PDF</option>
                                    <option>DOCX</option>
                                    <option>BMP</option>
                                    <option>JPEG</option>
                                    <option>PNG</option>
                                    <option>TIFF</option>
                                    <option>TIFF Multipage</option>
                                    <option>TXT</option>
                                    <option>HTML</option>
                                </select>
                            </td>
                            <td>
                                <select style="width: 170px" id="cmbConversionMode" name="cmbConversionMode" onchange="showHideChkBx()">
                                    <option>Convert To Single File</option>
                                    <option>Convert To Seperate Files</option>
                                    <option>Convert First File And Attach Rest As Original</option>
                                    <option>Create New File And Attach All As Original</option>
                                </select>
                            </td>
                            <td>
                                <label style="display: none;" id="lblCreatePortfolio">
                                    <input type="checkbox" id="chkCreatePortfolio" name="chkCreatePortfolio" checked="true" value="portfolio" />Create Portfolio</label>
                            </td>
                        </tr>
                        <tr>
                            <th>Base File Name</th>
                            <td></td>
                            <td colspan="2">
                                <input type="text" name="txtBaseFileName" id="txtBaseFileName" style="width: 99%" /></td>
                        </tr>
                        <tr>
                            <th colspan="4">
                                <input type="submit" name="btnConvert" id="btnConvert" class="ConvertButton" value="Convert" />
                            </th>
                        </tr>
                    </table>
                   } }
            </div>
            @{ if (ViewBag.URl != null && ViewBag.Message != null)
               { 
                <div style="text-align: center">
                    <label>@ViewBag.Message</label>
                    <br />
                    <br />
                    <a href="@ViewBag.Url">Download Converted Files</a>
                </div>
               }  }
            <div class="Footer">
                © 2002-2021 Gnostice Information Technologies Private Limited. All rights reserved.
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function showHideChkBx() {
            if (document.getElementById("cmbOutputFormat").value == "PDF" && (document.getElementById("cmbConversionMode").value == "Convert First File And Attach Rest As Original" ||
                document.getElementById("cmbConversionMode").value == "Create New File And Attach All As Original")) {
                document.getElementById("lblCreatePortfolio").style.display = "block";
            }
            else {
                document.getElementById("lblCreatePortfolio").style.display = "none";
            }
        }
    </script>
</body>
</html>
